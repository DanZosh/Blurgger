<style media="screen">
  li {
    background-color: brown;
    margin-bottom: 10px;
    padding: 10px;
    width: 50%;
    font-family: sans-serif;
  }
</style>


<h2>Blurgers: Your Burger Logger</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{id}}{{burger}}</li> 
    {{/if}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{id}}{{burger}}</li> 
      <button data-burgerid="{{this.id}}" class="devour">Devour Me!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger to be Logged</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Blurger</button>
</form>